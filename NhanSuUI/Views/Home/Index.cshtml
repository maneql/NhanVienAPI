@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>NHAN VIEN API DEMO</h1>
</div>

<div class="row">
    <div class="panel panel-primary" ng-init="GetAllChucVu()">
        <div class="panel-heading">
            <h3 class="panel-title">Existing ChucVu</h3>
        </div>
        <div class="panel-body">
            <table class="table table-condensed table-striped table-bordered table-hover no-margin">
                <thead>
                    <tr>
                        <th style="width:40%">Ma CV</th>
                        <th style="width:40%">Ten CV</th>
                        <th style="width:40%">Luong CV</th>
                        <th class="hidden-phone" style="width:20%"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in chucvus">
                        <td>{{item.mA_CV}}</td>
                        <td>{{item.teN_CV}}</td>
                        <td>{{item.luonG_CV}}</td>
                        <td>
                            <!--<input value="Edit" class="btn btn-info" style="width:100px;" ng-click="UpdateProduct(product)" type="button" />-->
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Add Nhan Vien</h3>
    </div>
    <br />
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-1">MA CV</div>
            <div class="col-lg-3"><input type="text" ng-model="MA_CV" value="LG 43LF6300" /></div>
            <div class="col-lg-1">Ten CV</div>
            <div class="col-lg-3"><input type="text" ng-model="TEN_CV" value="LG" /></div>
            <div class="col-lg-1">Luong CV</div>
            <div class="col-lg-3"><input type="text" ng-model="LUONG_CV" value="Tv" /></div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-offset-10">
                <input type="button" class="btn btn-info" style="width:80px;" ng-click="AddChucVus()" value="Add" />
            </div>
        </div>
    </div>
</div>